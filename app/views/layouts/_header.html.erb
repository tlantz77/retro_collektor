<div id="title-header">
  <h2>Weclome to RetroCollecktor!</h2>

  <% if logged_in? %>
    <p> Welcome, <%= current_user.username %>! <%=link_to("Logout", session_path(current_user), method: :delete) %></p>
  <% else %>
    <%= form_tag sessions_path do %>
      Username: <%= text_field_tag :username %>
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Submit", :class => 'form-button' %>
    <% end %>
  <% end %>

  <%= link_to("New user? Click here to sign up!", new_user_path)%>
</div>

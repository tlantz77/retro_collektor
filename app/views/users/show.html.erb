<div>
  <h2><%= owner? ? "Your" : "#{@user.username}'s" %> Games</h2>
  <% if owner? %>
    <%= link_to("Add new game", new_user_game_path(@user)) %>
    <% end %>

  <% @user.games.each do |game| %>
    <h4><%= link_to(game.title, user_game_path(@user, game))%> (<%= game.system %>)</h4>
  <% end %>
</div>
